{
  "name": "earn-tracker",
  "version": "1.0.0",
  "description": "Income and tax tracking application for Ukrainian individual entrepreneurs",
  "main": "dist/electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"pnpm dev:vite\" \"pnpm dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json && electron .",
    "build": "pnpm build:vite && pnpm build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "package": "electron-builder",
    "test": "vitest run",
    "clean": "rimraf dist node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.43.6",
    "@trpc/react-query": "^10.43.6",
    "@trpc/server": "^10.43.6",
    "@types/luxon": "^3.6.2",
    "better-sqlite3": "^9.2.2",
    "electron-is-dev": "^2.0.0",
    "kysely": "^0.26.3",
    "luxon": "^3.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "3.2.9",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.10.1",
    "lint-staged": "^15.5.1",
    "postcss": "^8.4.31",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.earntracker.app",
    "productName": "EarnTracker",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  }
}
